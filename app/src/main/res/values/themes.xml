<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleGame" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_theme</item>
        <item name="colorPrimaryVariant">@color/app_theme</item>
        <item name="colorOnPrimary">@color/light_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_theme_light</item>
        <item name="colorSecondaryVariant">@color/app_theme</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="GradientFabRed" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:background">@drawable/fab_color</item>
    </style>

    <style name="Button3D" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_3d_image</item>

    </style>

    <style name="Button3DYellow" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/button_3d_image_yellow</item>

    </style>
</resources>